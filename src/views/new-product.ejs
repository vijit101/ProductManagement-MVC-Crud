<!-- views/add-product.ejs -->

<h1 class="mt-5 mb-4">Add New Product</h1>

<%if(errorMessage){ %>
<div class="alert alert-danger" role="alert">
    <%=errorMessage %>
  </div>
  <% } %>
<form action="/" method="post" enctype="multipart/form-data"> 
    <!-- enc type tells the code that this form can also have file uploads not just text ie data is multipart can be image video etc.  -->
    <!-- submit at the default path  -->
    <div class="mb-3">
        <label for="name" class="form-label">Product Name</label>
        <input type="text" class="form-control" id="name" name="name" required >
    </div>
    <div class="mb-3">
        <label for="desc" class="form-label">Product Description</label>
        <textarea class="form-control" id="desc" name="desc" rows="3" required ></textarea>
    </div>
    <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input type="number" class="form-control" id="price" name="price" step="0.01" min="0" required>
    </div>
    <div class="mb-3">
        <label for="imageUrl" class="form-label">Image URL</label>

        <!--earlier code took url <input type="url" class="form-control" id="imageUrl" name="imageUrl" required> -->
        <input type="file" id="imageUrl" name="imageUrl" accept="images/*"/> 
        <!-- Accept images of all types ie * -->
    </div>
    <button type="submit" class="btn btn-primary">Add Product</button>
</form>